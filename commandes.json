{
    "commands": {
        "create_cursor nomducurseur (valeurdex,valeurdey)": {
            "args": ["IDENTIFIER", "LPAREN", "NUMBER", "COMMA", "NUMBER", "RPAREN"]
        },
        "move_cursor nomducurseur (valeurdex,valeurdey)": {
            "args": ["IDENTIFIER", "LPAREN", "NUMBER", "COMMA", "NUMBER", "RPAREN"]
        },
        "show_cursor nomducurseur": {
            "args": ["IDENTIFIER"]
        },
        "hide_cursor nomducurseur": {
            "args": ["IDENTIFIER"]
        },
        "rotate_cursor nomducurseur valeur": {
            "args": ["IDENTIFIER", "NUMBER"]
        },
        "color_cursor nomducurseur (R,G,B)": {
            "args": ["IDENTIFIER", "LPAREN", "NUMBER", "COMMA", "NUMBER", "COMMA", "NUMBER", "RPAREN"]
        },
        "thickness_cursor nomducurseur valeur": {
            "args": ["IDENTIFIER", "NUMBER"]
        },
        "draw_line nomducurseur valeur": {
            "args": ["IDENTIFIER", "NUMBER"]
        },
        "draw_rectangle nomducurseur (longueur,largeur)": {
            "args": ["IDENTIFIER", "LPAREN", "NUMBER", "COMMA", "NUMBER", "RPAREN"]
        },
        "draw_square nomducurseur valeur": {
            "args": ["IDENTIFIER", "NUMBER"]
        },
        "draw_circle nomducurseur rayon": {
            "args": ["IDENTIFIER", "NUMBER"]
        },
        "draw_arc nomducurseur rayon angledepart anglearrive": {
            "args": ["IDENTIFIER", "NUMBER", "NUMBER", "NUMBER"]
        },
        "draw_ellipse nomducurseur (axemineur,axemajeur)": {
            "args": ["IDENTIFIER", "LPAREN", "NUMBER", "COMMA", "NUMBER", "RPAREN"]
        },
        "draw_star nomducurseur nombrebranche valeur": {
            "args": ["IDENTIFIER", "NUMBER", "NUMBER"]
        },
        "fill_shape nomducurseur (R,G,B)": {
            "args": ["IDENTIFIER", "LPAREN", "NUMBER", "COMMA", "NUMBER", "COMMA", "NUMBER", "RPAREN"]
        }
    },

    "conditionals": {
        "if(shape) : ": {
            "args": ["LPAREN", "SHAPE", "RPAREN", "COLON"],
            "block": true
        },
        "else": {
            "args": ["COLON"],
            "block": true
        }
    },
    "loops": {
        "repeat (valeur)": {
            "args": ["LPAREN", "NUMBER", "RPAREN", "COLON"],
            "block": true
        }
    },
    
    "shapes":["cursor", "line", "rectangle", "square", "circle", "arc", "ellipse", "star"]
}
